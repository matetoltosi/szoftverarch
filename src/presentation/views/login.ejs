<h2>Login</h2>

<% if (error) { %>
  <div id="error" style="color:red;"><%= error %></div>
<% } %>

<form method="POST" action="/api/auth/login">
  <input name="email" type="email" placeholder="Email" required />
  <input name="password" type="password" placeholder="Password" required />
  <button>Login</button>
</form>